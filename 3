package com.verizon.ucs.restapi.resolvers;

import com.verizon.ucs.restapi.model.ScatterPlotData;
import com.verizon.ucs.restapi.services.ScatterPlotDataService;
import graphql.kickstart.tools.GraphQLQueryResolver;
import org.springframework.stereotype.Component;

import java.util.List;

@Component
public class ScatterPlotDataResolver implements GraphQLQueryResolver {

    private final ScatterPlotDataService scatterPlotDataService;

    // Constructor injection of the service class (you can replace this with your actual service)
    public ScatterPlotDataResolver(ScatterPlotDataService scatterPlotDataService) {
        this.scatterPlotDataService = scatterPlotDataService;
    }

    // Resolver for getScatterPlotDataByProtocol
    public List<ScatterPlotData> getScatterPlotDataByProtocol(String protocol) {
        return scatterPlotDataService.getScatterPlotDataByProtocol(protocol);
    }
}