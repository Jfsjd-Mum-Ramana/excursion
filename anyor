				.findByDeviceNameIgnoreCaseOrLoopbackIgnoreCaseOrNetworkIgnoreCaseOrVendorIgnoreCaseOrModelIgnoreCase(
						searchTerm, searchTerm, searchTerm, searchTerm, searchTerm);
