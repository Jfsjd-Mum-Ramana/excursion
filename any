    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modak Form</title>
    <!-- Include Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Include Kendo UI Core CSS -->
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.3.1109/styles/kendo.common.min.css">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.3.1109/styles/kendo.default.min.css">
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" defer></script>
    <!-- Include Kendo UI Core JS -->
    <script src="https://kendo.cdn.telerik.com/2022.3.1109/js/kendo.all.min.js" defer></script>
</head>
<body>

    <div class="container mt-5">
        <h2>Modak Form</h2>

        <form id="modakForm">
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" class="form-control" id="age" name="age" value="25" required>
            </div>

            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" class="form-control" id="date" name="date" value="2023-01-01" required>
            </div>

            <div class="form-group">
                <label for="organization">Organization:</label>
                <select class="form-control" id="organization" name="organization" required>
                    <option value="company1">Company 1</option>
                    <option value="company2">Company 2</option>
                    <option value="company3">Company 3</option>
                </select>
            </div>

            <button type="button" class="btn btn-primary" onclick="saveFormData()">Save</button>
        </form>

        <div class="mt-4" id="gridContainer"></div>
    </div>

    <script>
        function saveFormData() {
            const age = $('#age').val();
            const date = $('#date').val();
            const organization = $('#organization').val();

            const payload = {
                age: age,
                date: date,
                organization: organization
            };

            // Simulate a successful response locally
            const simulatedResponse = {
                age: payload.age,
                date: payload.date,
                organization: payload.organization
            };

            console.log('Simulated Response:', simulatedResponse);
            displayData(simulatedResponse);
            alert('Data saved successfully!');

            // Hide the form after saving data
            $('#modakForm').hide();
        }

        function displayData(data) {
            const dataGrid = $('#gridContainer');

            // Initialize Kendo UI Grid
            dataGrid.kendoGrid({
                dataSource: {
                    data: [data],
                    schema: {
                        model: {
                            fields: {
                                age: { type: 'number' },
                                date: { type: 'date' },
                                organization: { type: 'string' }
                            }
                        }
                    }
                },
                columns: [
                    { field: 'age', title: 'Age' },
                    { field: 'date', title: 'Date', format: '{0:MM/dd/yyyy}' },
                    { field: 'organization', title: 'Organization' }
                ]
            });
        }
    </script>

    <!-- Include Bootstrap JS for button styling -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
