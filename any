import org.apache.commons.compress.compressors.gzip.GzipCompressorInputStream;
import java.io.*;

public class ZipUtil {
    
    public static void ungzip(String gzipFilePath, String destDir) throws IOException {
        try (InputStream fin = new FileInputStream(gzipFilePath);
             BufferedInputStream bis = new BufferedInputStream(fin);
             GzipCompressorInputStream gzIn = new GzipCompressorInputStream(bis);
             FileOutputStream out = new FileOutputStream(new File(destDir, new File(gzipFilePath).getName().replace(".gz", "")))) {
            byte[] buffer = new byte[4096];
            int n;
            while ((n = gzIn.read(buffer)) != -1) {
                out.write(buffer, 0, n);
            }
        }
    }
}
